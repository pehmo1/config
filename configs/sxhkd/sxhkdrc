super + Return
	kitty

super + n
	simplenote

super + c
	pamixer -d 2 ; \
	~/.config/scripts/sbu.sh

super + v
	pamixer -i 2 ; \
	~/.config/scripts/sbu.sh

super + r
	kitty -e ranger

super + w
	firefox-developer-edition

super + p
  dmenu_run

super + shift + b
	blender

super + shift + g
	gimp

super + shift + h
	kitty -e htop

super + shift + m
	kitty -e qalc

super + shift + i
	firefox-developer-edition --private-window

super + shift + l
	slock

super + shift + o
	libreoffice

super + shift + r
	killall sxhkd & ; \
	sxhkd </dev/null &>/dev/null &

super + shift + s
	scrot

super + shift + u
	unityhub


# BSPWM
# focus other node
super + {j,k}
	bspc node -f last.local

# close node
super + q
  bspc node -c
  
# fullscreen
super + m
	bspc node -t \~fullscreen

# focus or send to desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

# focus last desktop
super + Tab
  bspc desktop -f last

# quit bspwm
super + shift + q
  bspc quit
